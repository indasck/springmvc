spring:
  application:
    name: MicroServiceGreet

  boot:
    admin:
      client:
        url: http://localhost:8022 # Spring Boot Admin server URL

server:
  port: 8025 # Microservice runs on port 8024

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/ # Eureka server URL

management:
  endpoints:
    web:
      exposure:
        include: '*' # Exposes all actuator endpoints
